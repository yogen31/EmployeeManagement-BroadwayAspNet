@{
}
@model List<EmployeeManagement.Models.Department>

<table class="table">
    <thead>
        <tr>
            <th>Department Name</th>
            <th>Department Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (EmployeeManagement.Models.Department item
        in Model)
        {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><a href="GetDepartmentById/@item.Id">View</a></td>
                    <td><a href="RemoveDepartmentById/@item.Id">Remove</a></td>
                </tr>
        }
    </tbody>
</table>
