@{
}
<style>
    .button{
        background-color:green;
        color:white;
        border-color:green;
        margin-bottom:20px;
        margin-top:20px;
        margin-left:45%;
    }
    thead{
        background-color:blue;
        color:white;
        font-weight: bold;
    }
    table{
        text-align:center;
        border-color:blue;
    }
    #head{
        text-align:center;
        font-weight:bold;
    }
</style>
<h1 id="head">Attendance Tracker</h1>

<button onclick="CheckIn()" class="button">@ViewBag.CheckInCheck</button>
<input id="attendanceId" value=@ViewBag.AttendanceId hidden="hidden"/>

<table class="table">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Check In Time</th>
            <th>Check Out Time</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Random Employee</td>
            <td>08:00 AM</td>
            <td>05:00 PM</td>
        </tr>
    </tbody>

</table>
<script>
    function CheckIn(){
        var attendanceId=document.getElementById("attendanceId");
        window.location.href = "@Url.Action("CheckInEmployee", "Attendance")"+"?attendanceId="+attendanceId;
    }
</script>
