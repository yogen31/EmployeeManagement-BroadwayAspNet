@{
}
@model EmployeeManagement.ViewModels.RegisterViewModel
<h1>Register</h1>
<div asp-validation-summary="All" class="text-danger col-md-4">
</div>
<form action="RegisterUsers" class="col-md-4">
    <div class="form-group">
        <label>Email Address</label>
        <input type="text" class="form-control" placeholder="Enter Email Address"
               asp-for="Email">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" placeholder="Enter Password"
               asp-for="Password">
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" class="form-control" placeholder="Enter Address"
               asp-for="ConfirmPassword">
    </div>
    <div class="form-group">
        <label>Role</label>
        <select required class="form-control" asp-for="RoleName">
            <option></option>
            @foreach (var item in ViewBag.RoleList)
            {
                <option value="@item.Name">
                    @item.Name
                </option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>