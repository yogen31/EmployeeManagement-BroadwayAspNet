@{
}
@model EmployeeManagement.ViewModels.LoginViewModel

<h1>Login</h1>
<div asp-validation-summary="All" class="text-danger" style="text-align:center;justify-content:center">
</div>
<form action="LoginUserDetails" class="col-md-4">
    <div class="form-group">
        <label>Email Address</label>
        <input type="text" class="form-control" placeholder="Enter Email Address"
               asp-for="Email">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" placeholder="Enter Password"
               asp-for="Password">
    </div>
    <button type="submit" class="btn btn-primary" style="margin-top:10px">Login</button>
</form>